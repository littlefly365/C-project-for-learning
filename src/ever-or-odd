#include <stdio.h>

int main(void) {
    int a, i = 0;
    printf("even or odd initialized\n");
    printf("advertence: you need to type 5 numbers to stop\n");
    
    while (i < 5) {
        scanf("%d", &a);
        if (a % 2 == 0) {
            printf("its an even number\n");
        } else {
            printf("its an odd number\n");
        }
        i++;
    }
    
    return 0;
}